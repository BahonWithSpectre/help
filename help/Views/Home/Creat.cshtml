@model help.DbFolder.Help

@{
    ViewData["Title"] = "Creat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/help.css">
<link rel="stylesheet" href="~/css/bootstrap.css">

<div class="container">

    <h4>Центр взаимопомощи</h4>
    <hr />
    <div class="row">

        <div class="col-md-4">
            <form asp-action="Creat">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label class="control-label">Категория</label>
                    <select class="form-control" name="Category">
                        <option value="Нужна Помощь">Нужна помощь</option>
                        <option value="Могу Помочь">Могу помочь</option>
                        <option value="Уже Помогли">Уже помогли</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label">Загаловка</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Ваше Имя</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Телефон номер</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="WhatsApp" /> @Html.DisplayNameFor(model => model.WhatsApp)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="Telegram" /> @Html.DisplayNameFor(model => model.Telegram)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">Город</label>
                    <select class="form-control" name="CityId">
                        @foreach(var d in ViewBag.City)
                        {
                            <option value="@d.Id">@d.CityName</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label">Информация</label>
                    <input asp-for="Info" class="form-control" style="height:120px" />
                    <span asp-validation-for="Info" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Отправить" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>



</div>

